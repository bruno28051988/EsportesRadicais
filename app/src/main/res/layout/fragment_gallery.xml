<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:background="@drawable/inteira"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="32dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Atletas"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/chango_regular"/>

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="24dp">

           <LinearLayout
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginLeft="16dp"
               android:orientation="vertical">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/quatro"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bruno Bordin"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:paddingLeft="8dp"
                   android:paddingRight="8dp"
                   android:background="@drawable/custom_header"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginLeft="16dp"
               android:orientation="vertical">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/dallas"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Dallas Friday"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:paddingLeft="8dp"
                   android:paddingRight="8dp"
                   android:background="@drawable/custom_header"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginLeft="16dp"
               android:orientation="vertical">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/parksbonifay"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Parks Bonifay"
                   android:textAlignment="center"
                   android:textColor="@color/white"
                   android:paddingLeft="8dp"
                   android:paddingRight="8dp"
                   android:background="@drawable/custom_header"/>
           </LinearLayout>


       </LinearLayout>

    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="32dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fotos"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/chango_regular"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>